<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
<div class="row">
    @using (Ajax.BeginForm("Index", "teste", null, new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "sucesso",
        OnFailure = "erro(xhr)"
    }))
    {
        @Html.ValidationSummary(true)
        {
            <h5>Saldo</h5>
            <hr />
            <div class="row">
                <div class="col s6 ">
                    <label class="col s12" for="conta">Conta</label>
                    <input type="text" name="teste"id="tester" class="col s12" />
                </div>
            </div>
                <div class="row">
                    <div class="col s6 ">
                        <button class="btn waves-effect waves-light" type="submit" name="ConsultaSaldo">
                            Consultar
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
        }
    }
</div>
<script>
    function sucesso(response) {
        alert(response);
    }

    function erro(xhr) {
        alert(xhr+"erro");
    }
</script>