<div class="col s12" id="dadosContaCliente">
    <div class="row divErroNaOperacao">
        <div class="col s12">
            <h6 class="erroOperacao"></h6>
        </div>
    </div>

    <h5>Extrato</h5>
    <hr />
    <form id="extratoPorData">
        <div class="row">
            <div class="col s6 ">
                <label class="col s12" for="conta">Conta</label>
                <input type="text" class="conta col s12" required name="conta" />
            </div>
            <div class="col s6 ">
                <label class="col s12" for="senha">Senha</label>
                <input type="password" class="col s12" required name="senha" />
            </div>

        </div>
        <div class="row">
            <div class="col s6 ">
                <label class="col s12" for="dataInicial">Data Inicial</label>
                <input type="date" class="col s12" required name="dataInicial" />
            </div>
            <div class="col s6 ">
                <label class="col s12" for="dataFinal">Data Final</label>
                <input type="date" class="col s12" required name="dataFinal" />
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col s6 ">
            <button class="btn waves-effect waves-light" type="submit" name="btnExtrato" onclick="sucesso()">
                Consultar
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>
</div>
<script>
    function sucesso() {
        window.open('@Url.Action("GetExtratoPorData")?' + $("#extratoPorData").serialize(), "_blank");
    };
    function erro(xhr) {
        $(".divErroNaOperacao").fadeIn(3000);
        $("#conta").val("");
        $("#agencia").val("");
        $("#senhaCli").val("");
        $(".erroOperacao").html("<i class='tiny material-icons'>error</i>Ops! algo deu errado. " + xhr.responseText);
    };
    $(document).ready(function () {
        $("#exibeSaldo").hide();
        $(".container").addClass("diminuicao50");
    });
</script>
