<div class="row">
    <div class="col s12">
        <h5>Depósito</h5>
        <hr />
    </div>
    <div class="col s6">
        @using (Html.BeginForm("Deposito", "Operacoes"))
        {
            @Html.ValidationSummary(true)
            {
                <div class="row">
                    <div class="col s6">
                        <label for="agencia" class="col s12">Agência</label>
                        <input type="text" class="col s12" name="agencia" />
                    </div>
                    <div class="col s6">
                        <label for="conta" class="col s12">Conta</label>
                        <input type="text" class="col s12" name="conta" />
                    </div>
                </div>
                <div class="row">
                    <div class="col s6">
                        <label for="valor" class="col s12">Valor</label>
                        <input type="text" class="col s12" name="valor" />
                    </div>
                </div>
                <div class="row">
                    <div class="col s6">
                        <button class="btn waves-effect waves-light" type="submit" name="Deposita">
                           Depositar
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>
