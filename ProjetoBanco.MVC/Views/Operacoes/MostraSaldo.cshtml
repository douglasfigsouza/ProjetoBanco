<div class="row">
    <div class="col s12">
        @if (ViewBag.erro == null)
        {
            <h5>
                Seu saldo é de:
                @ViewBag.saldo Reais
            </h5>
        }
        else
        {
            <h5>
                @ViewBag.erro;
            </h5>
            <div class="col s6">
                @Html.ActionLink("Realizar outra Operacao", "Saldo", "Operacoes")
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function() {
        $(".container").addClass("diminuicao50");
    });
</script>
