@model ProjetoBanco.MVC.ViewModels.TransacaoViewModel
<div class="col s12 ">
    @using (Ajax.BeginForm("Saldo", "Operacoes", null, new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "sucesso()",
        OnFailure = "erro(xhr)"
    }))
    {
        @Html.ValidationSummary(true)
        {
            <h5>Saldo</h5>
            <hr />
            <div class="row">
                <div class="col s6 ">
                    <label class="col s12" for="conta">Conta</label>
                    @Html.TextBoxFor(t => t.conta, new { @class = "col s12 conta" })
                </div>
                <div class="col s6 ">
                    <label class="col s12" for="agencia">Agência</label>
                    @Html.TextBoxFor(t => t.agencia, new { @class = "col s12 agencia" })
                </div>

            </div>
            <div class="row">
                <div class="col s6 ">
                    <label class="col s12" for="senhaCli">Senha</label>
                    @Html.TextBoxFor(t => t.senhaCli, new { @class = "col s12", @type = "password" })
                </div>
            </div>

            <div class="row">
                <div class="col s6 ">
                    <button class="btn waves-effect waves-light" type="submit" name="ConsultaSaldo">
                        Consultar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        }
    }
</div>
<script>
    function sucesso(response) {
        debugger;
        alert(response);
    }
    function erro(xhr) {
        debugger;
        alert("erro", xhr.responseText);
    }
    $(document).ready(function () {
        $(".container").addClass("diminuicao50");
    });

</script>
