@model ProjetoBanco.MVC.ViewModels.TrasacaoViewModel
<div class="row">
    @using (Html.BeginForm("ConsultaSaldo", "Operacoes"))
    {
        @Html.ValidationSummary(true)
        {
            <h4>Consulta Saldo</h4>
            <div class="row">
                <div class="col s6">
                    <label class="col s12" for="conta">Conta</label>
                    @Html.EditorFor(t=>t.conta,new {@class="col s12"})
                </div>
                <div class="col s6">
                    <label class="col s12" for="agencia">Agência</label>
                    @Html.EditorFor(t=>t.agencia,new {@class="col s12"})
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <button class="btn waves-effect waves-light right" type="submit" name="ConsultaSaldo">
                        Consultar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        }
    }
</div>

