@model ProjetoBanco.MVC.ViewModels.TransacaoViewModel

<div class="row">
    <div class="row">
        <div class="col s12">
            <h5>Transferência</h5>
            <hr />
        </div>
    </div>
    @using (Html.BeginForm("Transferencia", "Operacoes"))
    {
        <input type="hidden" name="op" value="4" />
        @Html.ValidationSummary(true)
        {
            <div class="col s12">
                <div class="row">
                    <div class="col s6">
                        <div class="row">
                            <h6>De</h6>
                        </div>
                        <div class="row">
                            <div class="col s5">
                                <label for="transacaoConta1.agencia" class="col s12">Agência</label>
                                <input type="text" name="transacaoConta1.agencia" class="col s12"/>
                            </div>
                            <div class="col s5">
                                <label for="transacaoConta1.conta" class="col s12">Conta</label>
                                <input type="text" name="transacaoConta1.conta" class="col s12"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s5">
                                <label for="transacaoConta1.valor" class="col s12">Valor</label>
                                <input type="text" name="transacaoConta1.valor" class="col s12"/>
                            </div>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <h6>Para</h6>
                        </div>
                        <div class="row">

                            <div class="col s5">
                                <label for="transacaoConta2.agencia" class="col s12">Agência</label>
                                <input type="text" name="transacaoConta2.agencia" class="col s12"/>
                            </div>
                            <div class="col s6">
                                <label for="transacaoConta2.conta" class="col s12">Conta</label>
                                <input type="text" name="transacaoConta2.conta" class="col s12"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <button class="btn waves-effect waves-light" type="submit" name="Saca">
                        Transferir
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>

        }
    }

</div>

