@model ProjetoBanco.MVC.ViewModels.TransacaoViewModel

<div class="row">
    <div class="row">
        <h6 class="right">
            Bem Vindo(a): @ViewBag.cliente.nome
        </h6>
        <div class="col s12">
            <h5>Transferência</h5>
            <hr />
        </div>
    </div>
    @using (Html.BeginForm("Transferencia", "Operacoes"))
    {
        <input type="hidden" name="op" value="4" />
        @Html.ValidationSummary(true)
        {
            <div class="col s12 ">
                <div class="row">
                    <div class="col s6 border-right">
                        <div class="row">
                            <div class="col s12">
                                <h6>De</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s5 ">
                                <label for="agenciaCont1" class="col s12 agencia">Agência</label>
                                <input type="text" name="agenciaCont1" class="col s12 agencia" />
                            </div>
                            <div class="col s5 ">
                                <label for="numCont1" class="col s12 conta">Conta</label>
                                <input type="text" name="numCont1" class="col s12 conta" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s5 ">
                                <label for="valorCont1" class="col s12">Valor</label>
                                <input type="text" name="valor" pattern="[0-9]+$" class="col s12 money" />
                            </div>
                            <div class="col s5 ">
                                <label for="senha" class="col s12 ">Senha</label>
                                <input type="password" name="senha" class="col s12" />
                            </div>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12">
                                <h6>Para</h6>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col s5 ">
                                <label for="agenciaCont2" class="col s12 agencia">Agência</label>
                                <input type="text" name="agenciaCont2" class="col s12 agencia" />
                            </div>
                            <div class="col s6 ">
                                <label for="numCont2" class="col s12 conta">Conta</label>
                                <input type="text" name="numCont2" class="col s12 conta" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <button class="btn waves-effect waves-light" type="submit" name="Saca">
                        Transferir
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>

        }
    }

</div>
<script>
    $(document).ready(function () {
        $("form").validate({
            submitHandler: function (form) {
                form.submit();
            },
            rules: {
                agenciaCont1: {
                    required: true
                },
                numCont1: {
                    required: true
                },
                senha: {
                    required: true,
                    minlength: 8
                },
                valor: {
                    required: true
                },
                agenciaCont2: {
                    required: true
                },
                numCont2: {
                    required: true
                }
            },
            messages: {
                agenciaCont1: {
                    required: "O campo agência é obrigatório! Digite-o"
                },
                numCont1: {
                    required: "O campo Conta é obrigatório! Digite-o"
                },
                senha: {
                    required: "O campo senha é obrigatório! Digite-o",
                    minlength: "A senha deve conter {0} digitos"
                },
                valor: {
                    required: "O campo Valor é obrigatório! Digite-o"
                },
                agenciaCont2: {
                    required: "O campo Conta é obrigatório! Digite-o"
                },
                numCont2: {
                    required: "O campo senha é obrigatório! Digite-o"
                }
            }
        });
    });
</script>
