@model ProjetoBanco.MVC.ViewModels.TransacaoViewModel
@if (ViewBag.operacao == 1)
{
    using (Html.BeginForm("ConfirmDeposito", "Operacoes"))
    {
        if (ViewBag.erroTransacao == null)
        {
            if (Model != null)
            {
                @Html.HiddenFor(t => t.agencia)
                @Html.HiddenFor(t => t.contaId)
                @Html.HiddenFor(t => t.clienteId)
                @Html.HiddenFor(t => t.valor)
            }
            <div class="row">
                <div class="col s12">
                    <h4>
                        @ViewBag.descOp
                        <hr/>
                    </h4>
                    <h5>
                        Cliente: @Model.nome
                    </h5>
                    <h5>
                        Valor: @Model.valor
                    </h5>
                    <hr/>
                </div>
                <div class="col s6">
                    <button class="btn waves-effect waves-light" type="submit" name="ConfirmDeposito">
                        Confirmar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        }
        else
        {
            <h5>@ViewBag.erroTransacao</h5>
            <div class="col s6">
                @Html.ActionLink("Deseja Realizar outra Operacao?", "Deposito", "Operacoes")
            </div>
        }
    }
}
else if (ViewBag.operacao == 2)
{
    using (Html.BeginForm("ConfirmSaque", "Operacoes"))
    {
        if (ViewBag.erroTransacao == null)
        {
            if (Model != null)
            {
                @Html.HiddenFor(t => t.agencia)
                @Html.HiddenFor(t => t.contaId)
                @Html.HiddenFor(t => t.clienteId)
                @Html.HiddenFor(t => t.valor)
            }
            <div class="row">
                <div class="col s12">
                    <h4>
                        @ViewBag.descOp
                        <hr/>
                    </h4>
                    <h5>
                        Cliente: @Model.nome
                    </h5>
                    <h5>
                        Valor:R$ @Model.valor
                    </h5>
                    <hr/>
                </div>
                <div class="col s6">
                    <button class="btn waves-effect waves-light" type="submit" name="ConfirmDeposito">
                        Confirmar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        }
        else
        {
            <h5>@ViewBag.erroTransacao</h5>
            <div class="col s6">
                @Html.ActionLink("Deseja Realizar outra Operacao?", "Deposito", "Operacoes")
            </div>
        }
    }
}
<script>
    $(document).ready(function() {
        $(".container").addClass("diminuicao50");
    });
</script>
