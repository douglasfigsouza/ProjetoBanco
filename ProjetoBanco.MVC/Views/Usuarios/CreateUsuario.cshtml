@model ProjetoBanco.MVC.ViewModels.UsuarioViewModel
<h5>Cadastro de Usuário</h5>
<div class="row">
    <div class="col s8">
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            {
                <div class="row">
                    <div class="col s4">
                        <label for="clienteiD" class="col s12">Cliente</label>
                        @Html.DropDownListFor(u=>u.clienteId,new SelectList(ViewBag.clientes,"Id","nome"), new {@class="col s12"})
                    </div>
                </div>

                <div class="row">
                    <div class="col s4">
                        <label for="nome" class="col s12">Usuário</label>
                        @Html.TextBoxFor(u=>u.nome, new {@class="col s12"})
                    </div>
                    <div class="col s4">
                        <label for="senha" class="col s12">Senha</label>
                        @Html.TextBoxFor(u=>u.senha, new {@class="col s12", type="password"})
                    </div>
                    <div class="col s4">
                        <label for="nome" class="col s12">Confirme sua Senha</label>
                        <input type="password" class="col s12" name="conf_senha"/>
                    </div>
                </div>

                <div class="row">
                    <button class="btn waves-effect waves-light right" type="submit" name="CadastroBanco">
                        Cadastrar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            }
        }
    </div>
</div>
<script>
    $(document).ready(function() {
        $("form").validate({
            submitHandler: function (form) {
                form.submit();
            },
            rules: {
                nome: {
                    required: true,
                    maxlength: 20
                },
                senha: {
                    required:true,
                    maxlength:8
                },
                conf_senha: {
                    required: true,
                    equalTo:"#senha"
                }
            },
            messages: {
                nome: {
                    required: "O campo nome é Obrigatório! Digite-O",
                    maxlength: "O campo Nome deve conter no máximo 8 caracteres!"
                },
                senha: {
                    required: "O campo senha é Obrigatório! Digite-O",
                    maxlength:"o campo senha deve conter no máximo 8 caracteres!"
                },
                conf_senha: {
                    required: "O campo Confirme sua Senha é Obrigatório! Digite-O",
                    equalTo:"As senhas não conferem"
                }

            }
        });
    });
</script>

